echo ""

# Node.jsプロセスを検索して停止
echo "🔍 実行中のサーバーを検索しています..."
PIDS=$(lsof -ti:3000)

if [ -z "$PIDS" ]; then
    echo "ℹ️  実行中のサーバーが見つかりませんでした"
else
    echo "🛑 サーバーを停止しています..."
    kill -9 $PIDS
    echo "✅ サーバーを停止しました"
fi

echo ""
echo "━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
